<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    app:cardCornerRadius="2dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/cli_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            tools:text="Product"
            android:theme="@style/TextLarge"/>

        <TextView
            android:id="@+id/cli_product_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cli_product_name"
            android:text="@string/quantity"
            android:theme="@style/TextNormal"/>

        <TextView
            android:id="@+id/cli_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cli_product_quantity_label"
            android:textColor="#000"
            tools:text="2"
            android:theme="@style/TextNormal"/>

        <TextView
            android:id="@+id/cli_product_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cli_product_name"
            android:layout_marginStart="100dp"
            android:text="@string/price"
            android:theme="@style/TextNormal"/>

        <TextView
            android:id="@+id/cli_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cli_product_price_label"
            android:layout_marginStart="100dp"
            android:textColor="#000"
            tools:text="20"
            android:theme="@style/TextNormal"/>

        <Button
            android:id="@+id/cli_remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:theme="@style/RedButton"
            android:textAppearance="@style/TextSmall"
            android:textColor="#FFF"
            android:text="@string/remove"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>